---
interface Props {
  date: string;
  title: string;
  company: string;
  description: string;
}

const { date, title, company, description } = Astro.props;
---

<li class="mb-12 ms-4">
  <div
    class="absolute w-3 h-3 bg-primary-light dark:bg-primary-dark rounded-full mt-1.5 -start-1.5 border border-buffer"
  >
  </div>

  <time
    class="text-xs font-bold uppercase tracking-widest text-text-muted-light dark:text-text-muted-dark"
  >
    {date}
  </time>

  <h3
    class="flex flex-wrap items-center gap-3 text-xl font-bold text-text-light dark:text-text-dark"
  >
    {title}
    <span
      class="text-sm font-medium px-2 py-0.5 rounded-md bg-secondary-light/30 dark:bg-brand-soft/50 border border-primary-light/10 dark:border-primary-dark/20 text-primary-light dark:text-text-dark"
    >
      {company}
    </span>
  </h3>

  <p
    class="mt-2 text-base leading-relaxed text-text-light/80 dark:text-text-dark/70 text-pretty"
  >
    {description}
  </p>
</li>

<style>
  li:hover span {
    transform: scale(1.05);
    background-color: var(--color-accent-light);
    transition: all 0.3s ease;
  }
</style>
