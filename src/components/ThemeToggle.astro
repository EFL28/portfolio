---
import { Moon, Sun } from "@lucide/astro";
---

<button
  id="themeToggle"
  class="flex p-2 transition hover:scale-125 cursor-pointer border-none bg-transparent"
  aria-label="Toggle theme"
  aria-pressed="false"
>
  <span class="sun hidden dark:inline text-yellow-400"><Sun size={18} /></span>
  <span class="moon inline dark:hidden text-zinc-600"><Moon size={18} /></span>
</button>

<script is:inline>
  const matchMedia = window.matchMedia("(prefers-color-scheme: dark)");

  const theme = (() => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    if (matchMedia.matches) {
      return "dark";
    }
    return "light";
  })();

  const btn = document.getElementById("themeToggle");

  if (theme === "light") {
    document.documentElement.classList.remove("dark");
  } else {
    document.documentElement.classList.add("dark");
  }

  window.localStorage.setItem("theme", theme);

  const isDarkInitial = document.documentElement.classList.contains("dark");
  if (btn) {
    btn.setAttribute("aria-pressed", isDarkInitial ? "true" : "false");
    btn.setAttribute(
      "aria-label",
      isDarkInitial ? "Switch to light theme" : "Switch to dark theme"
    );
  }

  const handleToggleClick = () => {
    const element = document.documentElement;
    element.classList.toggle("dark");

    const isDark = element.classList.contains("dark");
    localStorage.setItem("theme", isDark ? "dark" : "light");

    // Update accessible attributes after toggle
    if (btn) {
      btn.setAttribute("aria-pressed", isDark ? "true" : "false");
      btn.setAttribute(
        "aria-label",
        isDark ? "Switch to light theme" : "Switch to dark theme"
      );
    }
  };

  if (btn) {
    btn.addEventListener("click", handleToggleClick);
  }
</script>
