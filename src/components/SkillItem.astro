---
// src/components/SkillCard.astro
interface Props {
  name: string;
  icon: any;
}

const { name, icon: Icon } = Astro.props;
---

<div class="group relative flex flex-col items-center">
  <div
    class="p-3 rounded-xl border border-secondary-light dark:border-white/10 bg-light-space/50 dark:bg-dark-space/40 backdrop-blur-sm shadow-sm transition-all duration-300 hover:border-primary-dark/50 hover:shadow-[0_0_20px_rgba(58,49,216,0.1)] overflow-hidden"
  >
    <div
      class="transition-all duration-500 grayscale opacity-40 group-hover:grayscale-0 group-hover:opacity-100 group-hover:scale-110"
    >
      <Icon size={36} />
    </div>
  </div>

  <span
    class="absolute -bottom-10 scale-0 transition-all duration-200 rounded-md bg-dark-space dark:bg-text-dark px-2 py-1 text-xs text-white dark:text-dark-space font-bold tracking-tight group-hover:scale-100 shadow-xl border border-white/10"
  >
    {name}
  </span>
</div>
